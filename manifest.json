{
  "manifest_version": 2,
  "name": "Customer Lookup Integration",
  "version": "1.1.0",
  "description": "Integration with third party customer management software",

  "applications": {
    "gecko": {
      "id": "bluebeamdev@potzer.org",
      "strict_min_version": "91.0"
    }
  },

  "permissions": [
    "menus",
    "messagesRead",
    "tabs",
    "storage"
  ],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "options_ui": {
    "page": "options.html",
    "open_in_tab": true
  }
}
